<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_news_pic"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_roll_page_001" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="潍坊市社会信用体系建设联席会议办公室公开征求意见的通知"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_news_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="      为加快推进社会信用体系建设，创建国家社会信用建设示范城市，根据市政府安排，结合潍坊实际，市社会信用建设联席会议办公室（以下简称“市信用办”）起草了《关于建立失信联合惩戒制度加快推进社会诚信建设的意见（征求意见稿）》和《潍坊市公共信用信息
归集和使用管理办法（征求意见稿）》，现向社会公开征求意见"
            android:textSize="11sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_news_src"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="来源：潍坊市社会信用办公室"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2016-08-27"
                android:textSize="12sp" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>