<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">

    <!-- 信用查询 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_efeff4">

        <com.optimus.edittextfield.EditTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/main_input_round_shape"
            android:drawableLeft="@drawable/ic_main_search"
            android:drawablePadding="4dp"
            android:hint="输入关键字查询"
            android:maxLines="1"
            android:padding="6dp"
            android:textColorHint="@color/gray_c7"
            android:textSize="14sp"
            app:clearButtonMode="whileEditing" />

    </RelativeLayout>

    <include layout="@layout/include_recyclerview" />

</LinearLayout>